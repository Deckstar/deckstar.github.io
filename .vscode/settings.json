{
  "[graphql]": {
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": false
    }
  },
  "[markdown]": {
    "files.trimTrailingWhitespace": false
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "cSpell.words": ["scrollers", "unlisten"],
  "editor.codeActionsOnSave": {
    "source.fixAll": true,
    "source.fixAll.sortJSON": false
  },
  "editor.formatOnSave": true,
  "editor.insertSpaces": true,
  "editor.tabSize": 2,
  "eslint.enable": true,
  "eslint.lintTask.enable": true,
  "eslint.lintTask.options": "--ext .js,.jsx,.ts,.tsx,.graphql .",
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
    "graphql"
  ],
  "files.associations": {
    ".gmrc": "jsonc"
  },
  "files.insertFinalNewline": true,
  "files.trimTrailingWhitespace": true,
  "formatFiles.excludePattern": "**/node_modules,**/.vscode",
  "workbench.colorCustomizations": {
    "activityBar.background": "#542c84",
    "tab.activeBorder": "#542c84",
    "titleBar.activeBackground": "#542c84",
    "titleBar.border": "#542c84",
    "titleBar.inactiveBackground": "#542c84"
  },
}
